{% extends 'base.html.twig' %}

{% block title %}Liste des visiteurs{% endblock %}

{% block body %}
<h1>Liste des visiteurs</h1>

{# Messages flash #}
{% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
{% endfor %}
{% for message in app.flashes('danger') %}
    <div class="alert alert-danger">{{ message }}</div>
{% endfor %}

{# Bouton d’ajout sans visite spécifique (redirige vers une page avec sélection de la visite) #}
<a href="{{ path('visiteur_new_selection') }}" class="btn btn-primary mb-3">➕ Ajouter un visiteur</a>

{% if visiteurs is empty %}
    <p>Aucun visiteur trouvé.</p>
{% else %}
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Visite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for visiteur in visiteurs %}
                <tr>
                    <td>{{ visiteur.nom }}</td>
                    <td>{{ visiteur.prenom }}</td>
                    
                    <td>
                        {# Lien "Voir" désactivé si la route n’existe pas #}
                        {# <a href="{{ path('visiteur_show', {'id': visiteur.id}) }}" class="btn btn-sm btn-info">👁 Voir</a> #}

                        

                        <form method="post" action="{{ path('visiteur_delete', {'id': visiteur.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce visiteur ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ visiteur.id) }}">
                            <button class="btn btn-sm btn-danger">🗑 Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}
{% endblock %}
